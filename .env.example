# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
# Debug mode - set to False in production
DEBUG=True

# Base URL of your site (used for canonical URLs, etc.)
SITE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# Secret key for JWT tokens - MUST be a long random string in production
# Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# JWT token expiration in minutes (default: 60 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# -----------------------------------------------------------------------------
# ADMIN CREDENTIALS
# -----------------------------------------------------------------------------
# These are used to create the initial admin user
# Change these before deployment!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# SQLite (local file) - perfect for small sites
DATABASE_URL=sqlite:///./portfolio.db

# PostgreSQL (for production if needed)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# -----------------------------------------------------------------------------
# SITE CONTENT
# -----------------------------------------------------------------------------
# Personal information displayed on the site
SITE_NAME=Your Name
SITE_TAGLINE=Software Developer & Lifelong Learner

# Social links
GITHUB_URL=https://github.com/yourusername
LINKEDIN_URL=https://linkedin.com/in/yourusername
LEETCODE_URL=https://leetcode.com/yourusername
EMAIL=your.email@example.com

# Current company (optional)
CURRENT_COMPANY=Your Company
COMPANY_URL=https://yourcompany.com
